<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dl_activity_main_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fl_activity_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="321dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="#FFffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/profileEdge"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rank_img_gold"/>

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/emma22"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMMA"
                        android:textSize="20dp"
                        android:textColor="#FF333333"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="GOLD"
                            android:textSize="15dp"
                            android:textColor="#FF666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:text="13 RANK"
                            android:textSize="10dp"
                            android:textColor="#FF888888"/>

                        <Button
                            android:id="@+id/mainEditButton"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:text="EDIT"
                            android:textSize="12dp"
                            android:textColor="#FF888888"
                            android:background="@drawable/border"/>


                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/missionTextForMainActivity"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.3dp"
                        android:textColor="#A6A6A6"
                        android:text=" 오늘의 미션! 가속도 위반 5회 미만"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#88000000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/mainStartButton"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/test_button_img_11"/>


                <Button
                    android:id="@+id/mainTmapButton"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_below="@+id/mainStartButton"
                    android:layout_toRightOf="@+id/mainStartButton"
                    android:background="@drawable/test_button_img_4"/>

                <Button
                    android:id="@+id/mainRecordButton"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_below="@+id/mainStartButton"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/test_button_img_3"/>

                <Button
                    android:id="@+id/mainRankButton"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toRightOf="@+id/mainStartButton"
                    android:background="@drawable/test_button_img_2"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="#88000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:onClick="shareKakao"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/kakaotalk_icon"/>

                <ImageButton
                    android:onClick="shareFacebook"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/facebook_icon2"/>

                <ImageButton
                    android:id="@+id/mainTwitter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/twitter_logo"/>

                <ImageButton
                    android:id="@+id/mainLine"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/line_logo"/>

                <ImageButton
                    android:id="@+id/mainInstagram"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/instagram_logo"/>

                <Button
                    android:id="@+id/testButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="#ff00ff"
                    android:text="test" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_activity_main_nav_list"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#EDEDED"
            android:choiceMode="singleChoice"
            android:divider="#FF555555"
            android:dividerHeight="3dp"/>

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>